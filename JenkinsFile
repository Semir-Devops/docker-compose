pipeline{
    agent any
    stages{
        stage('Git Checkout'){
            steps{
                git url:'https://github.com/Semir-Devops/docker-compose', branch: 'main'
            }
        }
        stage("verify tooling") {
            steps {
                sh '''
                    docker version
                    docker info
                    docker compose version 
                    curl --version
                    jq --version
                '''
            }
        }
        stage('Start container') {
            steps {
                def dockerRun = 'docker compose up -d --no-color --wait'
                sshagent(['docker-compose']) {
                    sh "ssh -o StrictHostKeyChecking=no ubuntu@172.31.11.108 ${dockerRun}"
                }
                sh 'docker compose ps'
            }
        }
        stage('Run tests against the container') {
            steps {
                sh 'curl http://localhost:3000/param?query=demo | jq'
            }
        }
    }
}
